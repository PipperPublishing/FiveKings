<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@android:color/holo_blue_dark"
             android:id="@+id/fullscreen_content"
             tools:context=".FiveKings"
             android:paddingTop="@dimen/abc_action_bar_stacked_max_height"
             android:paddingBottom="5dp"
             android:clipChildren="false"
    >

    <RelativeLayout
        android:id="@+id/draw_and_discard_piles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clipChildren="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/blank"
            android:id="@+id/current_round"
            android:clipChildren="false"
            android:layout_centerHorizontal="true"
            android:textStyle="italic"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/drawPile"/>

        <view
            android:id="@+id/drawPile"
            class="com.example.jeffrey.fivekings.CardView"
            android:layout_width="54dp"
            android:layout_height="72dp"
            android:contentDescription="@string/Draw"
            android:text="@string/Draw"
            android:src="@drawable/b2fv"
            android:clipChildren="false"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/spacer"
            />

        <Space
            android:id="@+id/spacer"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/current_round"/>

        <view
            android:id="@+id/discardPile"
            class="com.example.jeffrey.fivekings.CardView"
            android:layout_width="54dp"
            android:layout_height="72dp"
            android:clipChildren="false"
            android:contentDescription="@string/Discard"
            android:text="@string/Discard"
            android:layout_toRightOf="@+id/spacer"
            android:layout_alignParentTop="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_above="@+id/Play"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:id="@+id/play_area"
        android:paddingTop="10dp"
        android:layout_below="@+id/draw_and_discard_piles"
        android:layout_alignParentTop="false">

        <!-- Use layout_weight=1 for current_cards and current_melds; this makes them fill empty space equally -->
        <RelativeLayout
            android:id="@+id/current_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:gravity="center"
            android:layout_weight="1">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/current_melds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:clipChildren="false"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|left"
            android:animateLayoutChanges="false"
            >
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startGame"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/btn_default"
        android:textColor="@color/primary_text_default_material_light"/>


</RelativeLayout>
